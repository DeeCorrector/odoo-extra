<?xml version="1.0"?>
<terp>
    <data>
        <menuitem name="Tools" id="menu_tools" icon="STOCK_PREFERENCES" />
        <record model="ir.ui.view" id="view_idm_vote_form">
            <field name="name">idm.vote.form</field>
            <field name="model">idm.vote</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="vote">
                    <field name="score" />
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_idm_idea_form">
            <field name="name">idm.idea.form</field>
            <field name="model">idm.idea</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Idea">
                    <field name="title" select="1" />
                    <field name="user_id" select="1" />
                    <field name="my_vote"/>
                    <field name="vote_avg" string="Average" />
                    <field name="description" colspan="4"/>
                    <field name="comment_ids" nolabel="1" colspan="4"/>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_idm_idea_tree">
            <field name="name">idm.idea.tree</field>
            <field name="model">idm.idea</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Idea">
                    <field name="create_date"/> 
                    <field name="user_id"/>
                    <field name="title"/>
                    <field name="vote_avg" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_idm_comment_tree">
            <field name="name">idm.comment.tree</field>
            <field name="model">idm.comment</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Comment">
                    <field name="content" />
                    <field name="user_id" />
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="view_idm_comment_form">
            <field name="name">idm.comment.form</field>
            <field name="model">idm.comment</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Comment">
                    <field name="content"/>
                </form>
            </field>
        </record>


        <record model="ir.actions.act_window" id="action_idm_idea">
            <field name="name">Ideas</field>
            <field name="res_model">idm.idea</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Tools/Ideas" id="menu_idm_idea" action="action_idm_idea"/>

        <record model="ir.actions.act_window" id="action_idm_idea_my_idea">
            <field name="name">My Ideas</field>
            <field name="res_model">idm.idea</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('user_id', '=', uid)]</field>
        </record>
        <menuitem name="Tools/Ideas/My Ideas" id="menu_idm_idea_my_idea" action="action_idm_idea_my_idea" />
    </data>
</terp>
