		<field name="account_collected_id" search="[('type','=','tax'),('name','=','Tax TVA')]"/>
		<field name="account_paid_id" search="[('type','=','tax'),('name','=','Tax TVA')]"/>
		<field name="domain">tva</field>
	</record>
	<record model="account.tax" id="tva0">
