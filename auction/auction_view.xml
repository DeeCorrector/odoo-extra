	<!-- tree1 form1 for NEW object in the deposit border -->
	<record model="ir.ui.view" id="v5">
		<field name="name">auction.lots.tree1</field>
		<field name="model">auction.lots</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
				<tree string="Auction Objects">
					<field name="lot_num"/>
					<field name="obj_num"/>
					<field name="name"/>
					<field name="auction_id"/>
					<field name="vnd_lim"/>
					<field name="lot_est1"/>
					<field name="lot_est2"/>
				</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="v6">
		<field name="name">auction.lots.form1</field>
		<field name="model">auction.lots</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Catalog">
				<field name="auction_id"/>
				<field name="obj_num"/>
				<field name="lot_num"/>
				
				<newline/>
				<field name="name"/>
				<field name="lot_type" select="1"/>
				<field name="name2"/>
				
				<newline/>
				<field name="artist_id"/>
				<field name="artist2_id"/>
				<field name="obj_desc" colspan="3"/>
				<field name="vnd_lim"/>
				<field name="vnd_lim_net"/>
				<field name="lot_est1"/>
				
				<field name="author_right" domain="[('domain','=','sabam')]"/>
				<field name="lot_est2"/>
				<field name="tva"/>
				<field name="state" readonly="1"/>
			</form>
		</field>
	</record>

	<!-- tree2 form2 for Catalog, All object and Unclassified objects -->
	<record model="ir.ui.view" id="v7">
		<field name="name">auction.lots.tree2</field>
		<field name="model">auction.lots</field>
		<field name="type">tree</field>
		<field name="priority" eval="1"/>
		<field name="arch" type="xml">
			<tree string="Catalog">
				<field name="obj_num" string="Ref" select="1"/>
				<field name="name" select="1"/>
				<field name="ach_login"/>
				<field name="obj_price"/>
				<field name="artist_id" select="1"/>
				<field name="state" select="1"/>
				<field name="obj_comm"/>
				<field name="bord_vnd_id"/>
				<field name="lot_est1"/>
				<field name="lot_est2"/>
				<field name="lot_type" select="1"/>
				<field name="lot_num"/>
			</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="v8">
		<field name="name">auction.lots.form2</field>
		<field name="model">auction.lots</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Catalog">
				<notebook>
				<page string="General Informations">
					<separator string="Object" colspan="4"/>
						<field name="obj_num" select="1"/>
						<field name="lot_type" select="1"/>
						<field name="lot_num"/>
						<field name="vnd_lim" select="1"/>
						<field name="lot_est1"/>
						<field name="lot_est2"/>
						<field name="tva"/>
						<field name="vnd_lim_net"/>
						<field name="name" select="1"/>
						<field name="name2" select="1"/>
						<field name="artist_id" select="1"/>
						<field name="artist2_id"/>
						<field name="bord_vnd_id" select="1"/>
						<field name="author_right" domain="[('domain','=','sabam')]"/>
						<field name="obj_desc" colspan="2"/>
						
						<separator string="Results" colspan="4"/>
						<field name="obj_price" select="1"/>
						<field name="obj_ret"/>
						<field name="auction_id" colspan="2"/>
						<field name="lot_local"/>
						<field name="state" select="1"/>
				</page>
				<page string="Partner Informations">
					<separator string="Buyer" colspan="3"/>
					<field name="ach_uid"  select="1"/>
					<field name="ach_login" select="1" comparator="="/>
					<field name="ach_inv_id"/>
					<field name="obj_comm" select="1"/>
					<field name="ach_pay_id"/>
					<field name="ach_emp"/>
					<separator string="State" colspan="3"/>
					<field name="bid_lines" editable="bottom" widget="one2many_list" colspan="3" view_tree="auction.bid_line.tree2" view="auction.bid_line.form2"/>
				</page>
				<page string="Picture">
                                        <field widget="image" name="image"/>
				</page>
				</notebook>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_all_objects">
		<field name="res_model">auction.lots</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_all_objects_form"/>
	</record>
