					<field name="author_right" domain="[('domain','=','sabam')]"/>
					<newline/>
					<field name="obj_desc" readonly="1" colspan="3"/>
					<field name="lot_est1" readonly="1"/>
					<field name="lot_est2" readonly="1"/>
					<field name="vnd_lim" readonly="1"/>
					<field name="vnd_lim_net"/>
					<field name="bid_lines" widget="one2many_list" colspan="3" readonly="1" view_tree="auction.bid_line.tree2" view="auction.bid_line.form2"/>
					<field name="state" readonly="1"/>
			</form>
		</field>Unclassified objects
	</record>

	<record model="ir.actions.act_window" id="a9">
		<field name="res_model">auction.lots</field>
		<field name="view_type">form</field>
