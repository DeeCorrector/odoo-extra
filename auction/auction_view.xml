	=======================================================
	Auction Management/seller
	=======================================================
	<record model="ir.actions.act_window" id="action_unclassified_objects">
		<field name="name">Unclassified objects</field>
		<field name="res_model">auction.lots</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[('auction_id','=',False)]</field>
	</record>
	<menuitem name="Auction Management/Sellers/Unclassified objects" action="action_unclassified_objects"/>
	<record model="ir.ui.view" id="v12">
		<field name="name">auction.deposit.tree</field>
		<field name="model">auction.deposit</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Deposit Border">
				<field name="name"/>
				<field name="date_dep"/>
				<field name="partner_id"/>
			</tree>
		</field>
	</record>



	<record model="ir.ui.view" id="view_deposit_border_form">
		<field name="name">auction.deposit.form</field>
		<field name="model">auction.deposit</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Deposit Border Form">
				<notebook>
					<page string="General Informations">
        					<field name="date_dep" select="1"/>
        					<newline/>
        					<field name="partner_id" colspan="2" select="1" on_change="partner_id_change(partner_id)"/>
        					<newline/>
						<field name="name" select="1"/>
						<newline/>
						<field name="method" colspan="2"/>
						<newline/>
        					<field name="tax_id" colspan="2" domain="[('domain','=','auction')]"/>
						<field name="lot_id" colspan="4" >
							<form string="Catalog">
								<field name="auction_id"/>
								<field name="obj_num"/>
								<field name="lot_num"/>

								<newline/>
								<field name="name"/>
								<field name="lot_type" select="1"/>
								<field name="name2"/>

								<newline/>
								<field name="artist_id"/>
								<field name="artist2_id"/>
								<field name="obj_desc" colspan="3"/>
								<field name="vnd_lim"/>
								<field name="vnd_lim_net"/>
								<field name="lot_est1"/>

								<field name="author_right" domain="[('domain','=','sabam')]"/>
								<field name="lot_est2"/>
								<field name="tva"/>
								<field name="state" readonly="1"/>
							</form>
						</field>
					</page>
					<page string="Extra Costs">
						<field name="specific_cost_ids" widget="one2many_list" nolabel="1" colspan="3">
							<tree string="Deposit Costs">
								<field name="name"/>
								<field name="amount"/>
							</tree>
							<form string="Deposit Costs">
								<field name="name"/>
								<field name="amount"/>
								<field name="account"/>
							</form>

						</field>
					</page>

				</notebook>
			</form>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_deposit_border">
		<field name="res_model">auction.deposit</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_deposit_border_form"/>
	</record>
	<menuitem name="Auction Management/Sellers" groups="admin" />
	<menuitem name="Auction Management/Sellers/Deposit border" action="action_deposit_border"/>
