						<field name="name" select="1"/>
						<newline/>
						<field name="method" colspan="2"/>
						<newline/>
        					<field name="tax_id" colspan="2" domain="[('domain','=','auction')]"/>
						<field name="lot_id" widget="one2many_list" colspan="5" view_tree="auction.lots.tree1" view="auction.lots.form1"/>
					</page>
					<page string="Extra Costs">
						<field name="specific_cost_ids" widget="one2many_list" nolabel="1" colspan="3"/>
