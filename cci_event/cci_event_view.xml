<terp>
	<data>
<!-- event.event form view (inherited) -->
		<record model="ir.ui.view" id="event.view_event_form">
			<field name="name">Events</field>
			<field name="model">event.event</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Events">
					<notebook>
					<page string="Information">
						<separator string="Event Description" colspan="4"/>
						<field name="name" string="Event" select="1" colspan="4"/>
						<field name="parent_id" domain="[('parent_id','child_of','Event')]" string="Category"/>
						<field name="type"/>
						<field name="user_id" select="1"/>
						<field name="active"/>
						<field name="date_begin" select="1"/>
						<field name="date_end" select="2"/>
						<field name="register_min" select="2"/>
						<field name="register_max" select="2"/>
						<field name="note"/> <!-- should be check -->
						<separator string="Status" colspan="4"/>
						<field name="state" select="1"/>
						<group col="4" colspan="2">
							<button string="Confirm Event" name="button_confirm" states="draft"/>
							<button string="Cancel Event" name="button_cancel" states="draft,confirm"/>
							<button string="Event Done" name="button_done" states="confirm"/>
							<button string="Set To Draft" name="button_draft" states="confirm,cancel,done"/>
						</group>
					</page>
					<page string="Extra Info">
						<field name="fse_code"/>
						<field name="fse_hours"/>
						<field name="signet_type"/>
						<!--<field name="localisation"/>-->
						<field name="account_analytic_id"/>
						<field name="budget_id"/>
						<field name="product_id"/>
						<!--<field name="check_accept"/>-->
						<newline/>
						<field name="agreement_nbr"/>
						<newline/>
						<separator string="Tasks management" colspan="4"/>
						<field name="project_id"/>
						<button colspan="2" string="Create Retro-Planning" name="button_project_create"/>
					</page>
					<page string="Mailing">
						<field name="mail_auto_registr"/>
						<newline/><newline/>
						<field name="mail_registr"/>
						<newline/>
						<field name="mail_auto_confirm"/>
						<newline/><newline/>
						<field name="mail_confirm"/>
						<newline/>
					</page>
					<page string="Statistics">
						<separator string="Registrations" colspan="4"/>
						<field name="register_current"/>
						<field name="register_prospect"/>
						<field name="sales_open"/>
						<field name="sales_draft"/>
						<separator string="Remaining Tasks" colspan="4"/>
					</page>
					</notebook>
				</form>
			</field>
		</record>

<!-- event.event tree view -->
	<record model="ir.ui.view" id="view_event_tree">
		<field name="name">event.event.tree</field>
		<field name="model">event.event</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Events" colors="red:register_min>register_current">
<!--			<tree string="Events">-->
				<field name="name"/>
				<field name="user_id"/>
				<field name="date_begin"/>
				<field name="register_min"/>
				<field name="register_current"/>
				<field name="state"/>
			</tree>
		</field>
	</record>

<!-- event.type view (inherit) -->
	<record model="ir.ui.view" id="view_event_type_form_inherit">
		  <field name="name">Event type</field>
		  <field name="model">event.type</field>
		  <field name="type">form</field>
		  <field name="inherit_id" ref="event.view_event_type_form"/>
		  <field name="arch" type="xml">
			<form string="Event Type">
				<field name="check_type"/>
			</form>
		  </field>
		</record>

<!-- view for event.group -->
		<record model="ir.ui.view" id="view_event_group_form">
			<field name="name">event.group.form</field>
			<field name="type">form</field>
			<field name="model">event.group</field>
			<field name="arch" type="xml">
				<form string="Event Group">
					<field name="name"/>
					<newline/>
					<field name="bookmark_name"/>
					<newline/>
					<field name="picture" widget="image" /><!-- should be corect -->
					<newline/>
					<field name="type"/>
					<field name="cavalier" />
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_event_group_tree">
			<field name="name">event.group.tree</field>
			<field name="type">tree</field>
			<field name="model">event.group</field>
			<field name="arch" type="xml">
				<tree string="Event Group">
					<field name="name"/>
					<field name="bookmark_name"/>
					<field name="type"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_event_group">
			<field name="name">Event Group</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">event.group</field>
			<field name="view_type">form</field>
		</record>
		<menuitem name="Events/Configuration/Groups/Event Group" action="action_event_group" id="menu_event_group"/>

<!-- view for event.check -->
		<record model="ir.ui.view" id="view_event_check_form">
			<field name="name">event.check.form</field>
			<field name="type">form</field>
			<field name="model">event.check</field>
			<field name="arch" type="xml">
				<form string="Event Check">
					<field name="name"/>
					<field name="code"/>
					<field name="unit_nbr"/>
					<field name="type_id"/>
					<field name="case_id"/>
					<newline/>
					<field name="date_reception"/>
					<field name="date_limit"/>
					<field name="date_submission"/>
					<newline/>
					<group col="4" colspan="13">
						<field name="state" select="1"/>
						<button string="Confirm" name="button_confirm"/>
						<button string="Block" name="button_cancel"/>
					</group>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_event_check_tree">
			<field name="name">event.check.tree</field>
			<field name="type">tree</field>
			<field name="model">event.check</field>
			<field name="arch" type="xml">
				<tree string="Event Check">
					<field name="name"/>
					<field name="code"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_event_check">
			<field name="name">Event Check</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">event.check</field>
			<field name="view_type">form</field>
		</record>
		<!-- menu should be check if it right place or not -->
		<menuitem name="Events/Event Check" action="action_event_check" id="menu_event_check"/>

<!-- view for event.check.type -->
		<record model="ir.ui.view" id="view_event_check_type_form">
			<field name="name">event.check.type.form</field>
			<field name="type">form</field>
			<field name="model">event.check.type</field>
			<field name="arch" type="xml">
				<form string="Check Type">
					<field name="name"/>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_event_check_type_tree">
			<field name="name">event.check.type.tree</field>
			<field name="type">tree</field>
			<field name="model">event.check.type</field>
			<field name="arch" type="xml">
				<tree string="Check Type">
					<field name="name"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_event_check_type">
			<field name="name">Check Type</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">event.check.type</field>
			<field name="view_type">form</field>
		</record>
		<!-- menu should be check if it right place or not -->
		<menuitem name="Events/Configuration/Event Check/Check Type" action="action_event_check_type" id="menu_event_check_type"/>

<!-- event.registratio form.. -->

		<record model="ir.ui.view" id="view_event_registration_inherit2">
			<field name="name">crm.case.form</field>
			<field name="type">form</field>
			<field name="model">crm.case</field>
			<field name="inherit_id" ref="crm.crm_case-view"/>
			<field name="arch" type="xml">
				<field name="history_line" position="before">
			    	<field name="unit_price"/>
			    	<field name="quantity"/>
			    	<separator string="Badge" colspan="4"/>
			    	<field name="badge_title"/>
			    	<field name="badge_name"/>
			    	<field name="badge_partner"/>
			    	<newline/>
			    	<separator colspan="4"/>
			    	<field name="event_id"/>
					<field name="group_id"/>
					<field name="cavalier"/>
					<separator colspan="4"/>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="view_event_registration_inherit3">
			<field name="name">crm.case.form</field>
			<field name="type">form</field>
			<field name="model">crm.case</field>
			<field name="inherit_id" ref="crm.crm_case-view"/>
			<field name="arch" type="xml">
				<field name="partner_address_id" position="replace">
					<newline/>
			    	<field name="partner_invoice_id"/>
			    	<field name="partner_address_id"/>
			    	<newline/>
			    	<field name="partner_order_id"/>
			    	<field name="contact_order_id"/>
				</field>
			</field>
		</record>

		<record model="ir.ui.view" id="view_event_registration_inherit">
			<field name="name">crm.case.form</field>
			<field name="type">form</field>
			<field name="model">crm.case</field>
			<field name="inherit_id" ref="crm.crm_case-view"/>
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Payments">
						<field name="invoice_label"/>
						<field name="tobe_invoiced"/>
						<field name="payment_mode"/>
						<field name="invoice_id"/>
						<field name="check_mode"/>
						<field name="check_ids"/>
						<field name="payment_ids"/>
					</page>
				</notebook>
			</field>
		</record>


	</data>
</terp>
