<?xml version="1.0"?>
<openerp>
<data>

	<!--
		Improve the current view to add phantom in the tree views
	-->

	<record model="ir.ui.view" id="mrp.mrp_bom_tree_view">
		<field name="field_parent">child_ids</field>
	</record>

	<!--
		New view with integrated sub-BoMs
	-->

	<record model="ir.ui.view" id="mrp_bom_tree_complete_view">
		<field name="name">mrp.bom.complete.tree</field>
		<field name="model">mrp.bom</field>
		<field name="priority">40</field>
		<field name="type">tree</field>
		<field name="field_parent">child_complete_ids</field>
		<field name="arch" type="xml">
			<tree string="BoM Structure">
				<field name="name"/>
				<field name="code"/>
				<field name="product_id"/>
				<field name="product_qty"/>
				<field name="product_uom"/>
				<field name="date_start"/>
				<field name="date_stop"/>
			</tree>
		</field>
	</record>
	<record model="ir.actions.act_window" id="mrp_bom_tree_action_complete">
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">mrp.bom</field>
		<field name="view_type">tree</field>
		<field name="domain">[('bom_id','=',False)]</field>
		<field name="view_id" ref="mrp_bom_tree_complete_view"/>
	</record>
	<menuitem name="BoM Detailed Structure" parent="mrp.menu_mrp_bom_form_action" action="mrp_bom_tree_action_complete" id="menu_bom_tree_complete"/>


</data>
</openerp>

