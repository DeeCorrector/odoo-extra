<?xml version="1.0"?>
<terp>
<data>



	<menuitem name="Point of sale/Gift voucher" action="account.action_bank_statement_tree" sequence="6"/>


	<record model="ir.ui.view" id="view_pos_pos_form">
		<field name="name">pos.order</field>
		<field name="model">pos.order</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Sales Order POS">
				<notebook >


					<page string="Order lines">
					  <field name="order_line" colspan="4" nolabel="1">
					  <tree string="Order lines" editable="bottom">
					      <field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,qty,parent.partner_id)" width="275"/>
					      <field name="qty" />
					      <field name="discount" />
					      <field name="price_unit" />
					      <field name="price_subtotal"/>
					  </tree>

					  <form string="Order lines">
					      <field name="product_id" on_change="onchange_product_id(parent.pricelist_id,product_id,qty,parent.partner_id)"/>
					      <field name="qty" />
					      <field name="discount" />
					      <field name="price_unit" />
					      <field name="price_subtotal"/>
					  </form>
				     </field>
						<group colspan="4" col="5" >
						<field name="amount_tax" />
						<field name="amount_total"  />
						<button name="button_dummy" string="_Compute total" type="object" states="draft"/>
						<label/><label/><field name="payment_amount"/><label/>
						<label/><label/><field name="payment_return"/>


						</group>

					<separator colspan="4" string="Payment"/>
						<group colspan="4" col="7">
<!-- 						  <field name="journal_id" select="1" completion="1" domain="['type','=','cash']" /> -->
 						  <field name="journal_id" select="1" domain="['type','=','cash']"/>
					<button name="%(pos_payment)d" string="Ok" type="action" states="draft"/>
					<button name="%(pos_refund)d" string="Refund" type="action" states="done,invoiced" />
					</group>
				   </page>



				   <page string="Payment">
					  <field name="payment_ids" colspan="4" nolabel="1">
					  <tree string="Payments" editable="bottom">
					    <field name="journal_id" select="1" width="200"/>
					    <field name="amount" />
					  </tree>
				      </field>
					<group colspan="4" col="7">
					<field name="left_to_pay"/>
					<button name="button_dummy" string="_Compute total" type="object" states="draft"/>
					<button name="%(pos_payment)d" string="Ok" type="action" states="draft"/>
<!-- 					<button name="%(pos_refund)d" string="Refund" type="action" states="done" /> -->
					</group>
				   </page>

				   <page string="Other">
					    <field name="pricelist_id" domain="[('type','=','sale')]"/>
					    <field name="shop_id" />
						<field name="name" select="1"/>
						<field name="date_order" select="1"/>
						<field name="state" />
						<field name="date_validity" />
						<field name="user_id" />
					    <field name="picking_id" />
					    <field name="nb_print"/>
						<newline/>
					    <field name="partner_id" />
						<newline/>
					    <field name="invoice_id"/>
						<label/>
						<button name="create_invoice" string="Create _Invoice" type="object" states="done"/>
						<newline/>
						<separator string="Notes" colspan="4"/>
						<field name="note" nolabel="1" colspan="4"/>
				   </page>
				</notebook>

			</form>
		</field>
	</record>






	<record model="ir.actions.act_window" id="action_pos_pos_form">
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">pos.order</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_pos_pos_form"/>
		<field name="domain">[ ('date_order','>=',time.strftime('%Y-%m-%d')) ]</field>
	</record>



