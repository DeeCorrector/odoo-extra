<?xml version="1.0"?>
<terp>
	<data>
	<record model="workflow" id="wkf_lic">
		<field name="name">crm.basic</field>
		<field name="osv">crm.meeting</field>
		<field name="on_create">True</field>
	</record>


		#----------------------------------------------
		# Activity
		#----------------------------------------------
	<record model="workflow.activity" id="lic_draft_basic">
		<field name="wkf_id" ref="wkf_lic"/>
		<field name="flow_start">True</field>
		<field name="name">draft</field>
		<field name="kind">function</field>
		<field name="action">do_draft()</field>
	</record>

	<record model="workflow.activity" id="lic_open_basic">
		<field name="wkf_id" ref="wkf_lic"/>
		<field name="name">open</field>
		<field name="kind">function</field>
		<field name="action">do_open()</field>
	</record>

	<record model="workflow.activity" id="lic_cancel_basic">
		<field name="wkf_id" ref="wkf_lic"/>
		<field name="name">cancelled</field>
		<field name="kind">function</field>
		<field name="action">do_cancel()</field>
	</record>
	
	<record model="workflow.activity" id="lic_pending_basic">
		<field name="wkf_id" ref="wkf_lic"/>
		<field name="name">pending</field>
		<field name="kind">function</field>
		<field name="action">do_pending()</field>
	</record>
	
	<record model="workflow.activity" id="lic_done_basic">
		<field name="wkf_id" ref="wkf_lic"/>
		<field name="name">done</field>
		<field name="kind">function</field>
		<field name="flow_stop">True</field>
		<field name="action">do_done()</field>
	</record>
		#----------------------------------------------
		# Transitions
		#----------------------------------------------

	<record model="workflow.transition" id="trans_lic_draft_open">
		<field name="act_from" ref="lic_draft_basic"/>
		<field name="act_to" ref="lic_open_basic"/>
		<field name="signal">do_open</field>
	</record>

	<record model="workflow.transition" id="trans_lic_draft_cancel">
		<field name="act_from" ref="lic_draft_basic"/>
		<field name="act_to" ref="lic_cancel_basic"/>
		<field name="signal">do_cancel</field>
	</record>

	<record model="workflow.transition" id="trans_lic_cancel_draft">
		<field name="act_from" ref="lic_cancel_basic"/>
		<field name="act_to" ref="lic_draft_basic"/>
		<field name="signal">do_draft</field>
	</record>
	
	<record model="workflow.transition" id="trans_lic_open_draft">
		<field name="act_from" ref="lic_open_basic"/>
		<field name="act_to" ref="lic_draft_basic"/>
		<field name="signal">do_draft</field>
	</record>
	
	<record model="workflow.transition" id="trans_lic_open_pending">
		<field name="act_from" ref="lic_open_basic"/>
		<field name="act_to" ref="lic_pending_basic"/>
		<field name="signal">do_pending</field>
	</record>
	
	<record model="workflow.transition" id="trans_lic_open_done">
		<field name="act_from" ref="lic_open_basic"/>
		<field name="act_to" ref="lic_done_basic"/>
		<field name="signal">do_done</field>
	</record>
	<record model="workflow.transition" id="trans_lic_pending_open">
		<field name="act_from" ref="lic_pending_basic"/>
		<field name="act_to" ref="lic_open_basic"/>
		<field name="signal">do_open</field>
	</record>
	
	<record model="workflow.transition" id="trans_lic_open_cancel">
		<field name="act_from" ref="lic_open_basic"/>
		<field name="act_to" ref="lic_cancel_basic"/>
		<field name="signal">do_cancel</field>
	</record>
	
	<record model="workflow.transition" id="trans_lic_pending_open">
		<field name="act_from" ref="lic_pending_basic"/>
		<field name="act_to" ref="lic_open_basic"/>
		<field name="signal">do_open</field>
	</record>
	<record model="workflow.transition" id="trans_lic_pending_done">
		<field name="act_from" ref="lic_pending_basic"/>
		<field name="act_to" ref="lic_done_basic"/>
		<field name="signal">do_done</field>
	</record>

	</data>
</terp>
