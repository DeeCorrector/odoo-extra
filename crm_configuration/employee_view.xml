<?xml version="1.0"?>
<terp>
		<data>
		
			<record model="ir.ui.view" id="dept_tree_view">
				<field name="name">dept.form</field>
				<field name="model">dept.type</field>
				<field name="type">tree</field>
				<field name="arch" type="xml">
					<tree string="Department Version">
						<field name="deptid"/>
						<field name="dname" select="1"/>
						<newline/>
						<field name="street" />
						<field name="city" />
						<field name="zip" />
						<newline/>
						<field name="state" />
						<field name="country" />
						<newline/>
						<field name="desc" colspan="3"/>
					</tree>
				</field>
			</record>

			<record model="ir.actions.act_window" id="dept_action">
				<field name="type">ir.actions.act_window</field>
				<field name="res_model">dept.type</field>
				<field name="view_type">form</field>
				<field name="view_mode">tree,form</field>
				<field name="view_id" ref="dept_tree_view"/>
			</record>
			<menuitem name="Employee/Department" id="menu_dept_action" action="dept_action"/>

			<record model="ir.ui.view" id="employee_view">
				<field name="name">employee.form</field>
				<field name="model">employee.type</field>
				<field name="type">form</field>
				<field name="arch" type="xml">
					<form string="Employee Version">
						<field name="eid"/>
						<field name="name"/>
						<field name="designation"/>
						<field name="dept_id" />
						<field name="email" />
						<field name="state" />
							<group>
								<button string="Validate" name= "chech_email_new" state="draft,valid,notvalid,dnserror,noresponse" type="object"/>
							</group>
						<field name="resume" />
						<field name="address" mode="form,tree" colspan="4" nolabel="1" select="1">
							<form string="Employee contacts">
								<field name="name"/>
								<field name="title" domain="[('domain', '=', 'contact')]"/>
								<field name="function"/>
								<field name="type" select="2"/>
								<field name="street" select="2"/>
								<field name="street2"/>
								<newline/>
								<field name="zip" select="2"/>
								<field name="city" select="2"/>
								<newline/>
								<field name="country_id" select="2" completion="1"/>
								<field name="state_id" select="2"/>
								<newline/>
								<field name="phone"/>
								<field name="fax"/>
								<newline/>
								<field name="mobile"/>
								<field name="email" select="2" widget="email" />
							</form>
							<tree string="Employee contacts">
								<field name="name" />
								<field name="zip"/>
								<field name="city"/>
								<field name="country_id"/>
							</tree>
						</field>
					</form>
				</field>
			</record>


			<record model="ir.ui.view" id="employee_tree_view">
				<field name="name">employee.form</field>
				<field name="model">employee.type</field>
				<field name="type">tree</field>
				<field name="arch" type="xml">
					<tree string="Employee Version">
						<field name="eid"/>
						<field name="name" select="1"/>
						<field name="designation" />
						<field name="dept_id" />
						<field name="email" />
					</tree>
				</field>
			</record>

			<record model="ir.actions.act_window" id="employee_action">
				<field name="type">ir.actions.act_window</field>
				<field name="res_model">employee.type</field>
				<field name="view_type">form</field>
				<field name="view_mode">tree,form</field>
				<field name="view_id" ref="employee_tree_view"/>
			</record>
			<menuitem name="Employee/employee" id="menu_employee_action" action="employee_action"/>


  	</data>
</terp>	