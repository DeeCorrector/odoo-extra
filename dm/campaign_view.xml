	<record model="ir.ui.view" id="view_campaign_tree">
		<field name="name">dm.campaign.tree</field>
		<field name="model">dm.campaign</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Campaigns">
				<field name="name" string="Name"/>
				<field name="campaign_type"/>
				<field name="date_start"/>
				<field name="responsible_id" />
				<field name="country_id" />
<!--				<field name="country_id" />-->
				<field name="state"/>
			</tree>
		</field>
	</record>

	<record model="ir.ui.view" id="view_campaign_form">
		<field name="name">dm.campaign.form</field>
		<field name="model">dm.campaign</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Campaigns">
				<notebook colspan="4">
					<page string="General">
						<separator string="Global Information" colspan="4"/>
						<field name="name" string="Name" select="1"/>
						<field name="code1" string="Code" select="2"/>
<!--						<field name="parent_id" string="Category" domain="[('type','=','view')]"/>-->
						<field name="country_id" select="1" on_change="onchange_offer(offer_id,country_id)"/>
						<field name="offer_id" on_change="onchange_offer(offer_id,country_id)" select="1"/>
						<field name="lang_id" select="2"/>
						<field name="currency_id" select="2"/>
						
						<field name="campaign_type" select="2"/>
						<field name="date_start"/>
						<field name="date"/>
<!--						<field name="partner_id"/>-->
-						<field name="dealer_id"/>
						<field name="trademark_id"/>
						<field name="responsible_id" />
<!--						<separator string="Tasks Management" colspan="4"/>-->
<!--						<group colspan="4">-->
<!--						<field name="project_id"/>-->
<!--						<button string="Create Retro-Planning" name="%(dm.campaign_wiz)d" type="action"/>-->
<!--						</group>-->
						<separator string="Process State" colspan="4"/>
						<field name="planning_state" select="2" nolabel="0"/>
						<field name="manufacturing_state" select="2" nolabel="0"/>
<!--						<field name="campaign_stat_ids"/>-->
						<separator string="Campaign Status" colspan="4"/>
						<group col="10" colspan="4">
							<field name="state" readonly="1" select="2" nolabel="1"/>
							<button name="state_open_set" string="Open" states="draft,pending" type="object"/>
							<button name="state_close_set" string="Close" states="draft,open,pending" type="object"/>
							<button name="state_pending_set" string="Set pending" states="open" type="object"/>
							<button name="state_draft_set" string="Set to draft" states="open,pending,close" type="object"/>
						</group>
					</page>
					<page string="Propositions">
						<field name="proposition_ids" nolabel="1">
							<form string="Propositions">
								<field name="name" string="Name"/>
								<field name="code1" string="Code"/>
								<field name="date_start"/>
								<field name="proposition_type"/>
								<newline/>
								<field name="starting_mail_price"/>
<!--								<field name="customer_pricelist_id"/>-->
<!--								<field name="requirer_pricelist_id"/>-->
<!--								<newline/>-->
								<field name="quantity_max" string="Quantity"/>
								<field name="sale_rate"/>
								<separator string="Payment Methods" colspan="4"/>
								<field name="payment_methods" colspan="4" nolabel="1"/>								
								<field name="segment_ids" colspan="4" nolabel="1">
									<form string="Segments">
										<field name="name" string="Name" select="1"/>
										<field name="code" string="Action Code"/>
										<field name="file_id" />
										<field name="sequence"/>
										<field name="active" />
										<field name="quantity" select="2"/>
										<field name="raw_quantity" select="2"/>
										<newline/>
										<field name="split_id" />
										<field name="reuse_id" />
										<field name="start_census"/>
										<field name="end_census"/>
										<field name="deduplication_level"/>
						<!--				<field name="action_code" string="Action Code" select="2"/>-->
										<field name="note" colspan="4"/>
									</form>
									<tree string="Segments">
										<field name="name" string="Name" select="1"/>
										<field name="code" string="Action Code" select="2"/>
										<field name="qty"/>
									</tree>
								</field>
								<newline/>
					<!--				<field name="delay_ids" colspan="4"/>-->
								<separator string="Notes" colspan="4"/>
								<field name="notes" colspan="4" nolabel="1"/>
							</form>
							<tree string="Propositions">
								<field name="name" string="Name"/>
								<field name="code" string="Code"/>
								<field name="date_start" colspan="4"/>
								<field name="quantity_max" string="Quantity"/>
								<field name="sale_rate"/>
								<field name="proposition_type"/>
							</tree>
						</field>
					</page>
					<page string="Manufacturing">
						<separator string="Manufacturing" colspan="4"/>
						<field name="campaign_group_id" colspan="2"/>
					</page>
					<page string="Desktop Publishing">
						
						<group colspan="4">
							<separator string="                           " colspan="1"/>
							<separator string="Theorical Dates" colspan="1"/>
							<separator string="Reviewed Dates" colspan="1"/>
							<separator string="Real Dates" colspan="1"/>
						<separator string="DTP Request" colspan="4"/>
							<label string="DTP Request Date" width="200" colspan="1"/>
							<field name="theorical_dtp_request_date" nolabel="1" colspan="1"/>
							<field name="reviewed_dtp_request_date" nolabel="1" colspan="1"/>
							<field name="real_dtp_request_date" nolabel="1" colspan="1"/>
						<separator string="Translation Dates" colspan="4"/>
							<label string="Translation Delivery Date" width="200" colspan="1"/>
							<field name="theorical_translation_delivery_date" nolabel="1" colspan="1"/>
							<field name="reviewed_translation_delivery_date" nolabel="1" colspan="1"/>
							<field name="real_translation_delivery_date" nolabel="1" colspan="1"/>
							<label string="Translation Rereading Date" width="200" colspan="1"/>
							<field name="theorical_translation_rereading_date" nolabel="1" colspan="1"/>
							<field name="reviewed_translation_rereading_date" nolabel="1" colspan="1"/>
							<field name="real_translation_rereading_date" nolabel="1" colspan="1"/>
						<separator string="First Draft Delivery" colspan="4"/>
							<label string="Delivery Date" colspan="1"/>
							<field name="theorical_draft_delivery_date" width="200" nolabel="1" colspan="1"/>
							<field name="reviewed_draft_delivery_date" nolabel="1" colspan="1"/>
							<field name="real_draft_delivery_date" nolabel="1" colspan="1"/>
						<separator string="Final Corrected Proof" colspan="4"/>
							<label string="Validation Date" width="200" colspan="1"/>
							<field name="theorical_fcp_validation_date" nolabel="1" colspan="1"/>
							<field name="reviewed_fcp_validation_date" nolabel="1" colspan="1"/>
							<field name="real_fcp_validation_date" nolabel="1" colspan="1"/>
							<label string="DTP Suplier Delivery Date" colspan="1"/>
							<field name="theorical_dtp_sup_delivery_date" nolabel="1" colspan="1"/>
							<field name="reviewed_dtp_sup_delivery_date" nolabel="1" colspan="1"/>
							<field name="real_dtp_sup_delivery_date" nolabel="1" colspan="1"/>
						</group>
					</page>
					<page string="Customers Files">
						<field name="deduplicator_id"/>
						<field name="dedup_order_date"/>
						<field name="dedup_validity_date"/>
						<field name="dedup_delivery_date"/>
					</page>
					<page string="Notes">
						<separator string="Notes" colspan="4"/>
						<field name="notes" colspan="4" nolabel="1"/>
					</page>
				</notebook>
			</form>
		</field>
	</record>
        
