<?xml version="1.0"?>
<terp>
<data>
	<menuitem name="Direct Marketing" icon="terp-mrp" id="menu_dm_root"/>
	<menuitem name="Direct Marketing/Configuration" id="menu_dm_config" sequence="1"/>
	<menuitem name="Direct Marketing/Campaigns" id="menu_dm_campaigng" sequence="3"/>
	<!--
	=======================================================
	Campaign Views
	=======================================================
	-->

	<record model="ir.ui.view" id="view_campaign_tree">
		<field name="name">dm.campaign.tree</field>
		<field name="model">dm.campaign</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Campaigns">
				<field name="name"/>
				<field name="type"/>
				<field name="offer_id"/>
				<field name="date_start"/>
				<field name="date_end"/>
				<field name="state"/>
			</tree>
		</field>
	</record>



	<record model="ir.ui.view" id="view_campaign_form">
		<field name="name">dm.campaign.form</field>
		<field name="model">dm.campaign</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Campaigns">
						<field name="name" string="Name"/>
						<field name="code" string="Code"/>
						<field name="offer_id"/>
						<field name="parent_id"/>
						<field name="country_id"/>
						<field name="lang_id"/>
				<notebook colspan="4">
					<page string="General">
						<field name="date_start"/>
						<field name="date_end"/>
						<field name="type"/>
						<field name="partner_id" string="Partner"/>
						<field name="trademark_id"/>
						<field name="receiver_id"/>
						<field name="project_id" colspan="4"/>
						<separator string="Notes" colspan="4"/>
						<field name="notes" colspan="4" nolabel="1"/>
<!--						<field name="campaign_stat_ids"/>-->
						<separator string="Status" colspan="4"/>
						<group col="10" colspan="4">
							<field name="state" select="2" nolabel="1"/>
							<button name="state_planning_set" string="Planning" states="draft,open" type="object"/>
							<button name="state_open_set" string="Open" states="draft,fabrication" type="object"/>
							<button name="state_fabrication_set" string="Fabrication" states="draft,open,planning" type="object"/>
							<button name="state_close_set" string="Close" states="draft,open,fabrication,planning" type="object"/>
							<button name="state_cancel_set" string="Cancel" states="draft,open,fabrication,planning" type="object"/>
							<button name="state_draft_set" string="Reset to Draft" states="close,cancel" type="object"/>
						</group>						
					</page>
					<page string="Propositions">
						<field name="proposition_ids" nolabel="1"/>
					</page>
					<page string="Procurement">
						<field name="product_ids" nolabel="1">
							<form string="Products">
								<field name="product_id"/>
								<field name="qty_planned"/>
								<field name="qty_real"/> 
								<field name="price"/>
							</form>
							<tree string="Products">
								<field name="product_id"/>
								<field name="qty_planned"/>
								<field name="qty_real"/> 
								<field name="price"/>
							</tree>
						</field>
					</page>
					<page string="Desktop Publishing">					
						<field name="dtp_date_delivery"/>
						<field name="dtp_date_real_delivery"/>
						<field name="dtp_intervention_type"/>
						<field name="dtp_making"/> 
<!--						<field name="dtp_making_time"/>    -->
						<field name="dtp_operator"/>
						<field name="dtp_date_recovered"/>
						<separator string="Notes" colspan="4"/>
						<field name="dtp_notes" colspan="4" nolabel="1"/>            
					</page>
				</notebook>
			</form>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_campaign_form">
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">dm.campaign</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="view_id" ref="view_campaign_tree"/>
	</record>
	<menuitem name="Direct Marketing/Campaigns/All Campaigns" id="menu_action_campaign_form" action="action_campaign_form"/>

