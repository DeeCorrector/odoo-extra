	<!--
	=======================================================
	Offer Step Views
	=======================================================
	-->
	
	<record model="ir.ui.view" id="view_offer_step_tree">
		<field name="name">dm.offer.step.tree</field>
		<field name="model">dm.offer.step</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Offer Steps">
				<field name="type"/>
				<field name="offer_id"/>
				<field name="incoming_transition_ids" context="{'type':'incoming'}"/>
				<field name="outgoing_transition_ids" context="{'type':'outgoing'}"/>
				<field name="state"/>
			</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="view_offer_step_form">
		<field name="name">dm.offer.step.form</field>
		<field name="model">dm.offer.step</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Offer Step">
				<notebook>
					<page string="General">
						<field name="offer_id"/>
						<field name="type" select="2" on_change="onchange_type(type)"/>
						<field name="quotation"/>
						<field name="legal_state"/>
						<newline/>
						<field name="media_id" select="1"/>
						<field name="code"/>
						<newline/>
						<field name="origin_id" colspan="4"/>
						<separator string="Products" colspan="4"/>
						<field name="product_ids" colspan="4" nolabel="1"/>
						<separator string="Status" colspan="4"/>
						<group col="8" colspan="4">
							<field name="state" select="1" nolabel="1"/>
							<button name="state_open_set" string="Open" states="draft,freeze" type="object"/>
							<button name="state_freeze_set" string="Freeze" states="draft,open" type="object"/>
							<button name="state_close_set" string="Close" states="open,draft,freeze" type="object"/>
							<button name="state_draft_set" string="Reset to Draft" states="closed" type="object"/>
						</group>
					</page>
					<page string="Transition">
<!--						<field name="split_mode" colspan="2" string="Split mode"/>-->
<!--						<field name="flow_start" colspan="2" on_change = "on_change_flow_start(flow_start,offer_id,media_id)"/>-->
<!--						<field name="flow_stop" colspan="2"/>-->
						<field name="incoming_transition_ids" colspan="4" string="Incoming" context="{'type':'step_to','step_id':active_id or False}"/>
						<field name="outgoing_transition_ids" colspan="4" string="Outgoing" context="{'type':'step_from','step_id':active_id or False}"/>
					</page>
					<page string="History">
						<field name="history_ids" nolabel="1" colspan="4"/>
					</page>
					<page string="Documents">
						<field name="document_ids" colspan="4" nolabel="1"/>
					</page>
				</notebook>
			</form>
		</field>
	</record>
	
	<record model="ir.actions.act_window" id="action_offer_step_form">
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">dm.offer.step</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_offer_step_tree"/>
	</record>
	<menuitem name="Direct Marketing/Configuration/Offer Steps/All Offer Steps" id="menu_action_offer_step_form" action="action_offer_step_form"/>

	<act_window name="Offer Steps"
		res_model="dm.offer.step"
		src_model="dm.offer"
		view_type="form"
		view_mode="tree,form"
		id="act_offer_step_opened"
		domain = "[('offer_id','=',active_id)]"/>
