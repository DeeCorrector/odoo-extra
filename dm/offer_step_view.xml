	<menuitem name="Direct Marketing/Configuration/Offer Steps/Documents/Edit document categories" id="menu_action_offer_doc_categ_form" action="action_doc_categ_form" sequence="2"/>

	<!--
	=======================================================
	Offer Step Document Views
	=======================================================
	-->


	<record model="ir.ui.view" id="view_offer_step_document_form">
		<field name="name">dm.offer.document.form</field>
		<field name="model">dm.offer.document</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Documents">
				<field name="name" select="1"/>
				<field name="code" select="2"/>
				<field name="lang_id"/>
				<field name="copywriter_id" select="1"/>
				<separator string="Document Categories" colspan="4"/>
				<field name="category_ids" colspan="4" nolabel="1"/>
				<group col="6" colspan="4">
					<field name="mailing_at_dates" select="2"/>
					<field name="interactive" select="2"/>
					<field name="answer_letter" select="2"/>
				</group>
				<separator string="Desktop Publishing" colspan="4"/>
				<field name="dtp_operator" colspan="4"/>
				<field name="dtp_theorical_date"/>
				<field name="dtp_valid_date"/>
				<field name="dtp_making_date"/>
				<field name="dtp_reread"/>
			</form>
		</field>
	</record>
	<record model="ir.ui.view" id="view_offer_step_document_tree">
		<field name="name">dm.offer.document.tree</field>
		<field name="model">dm.offer.document</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Documents">
				<field name="name"/>
				<field name="copywriter_id"/>
				<field name="mailing_at_dates"/>
				<field name="interactive"/>
				<field name="answer_letter"/>
				<field name="dtp_operator"/>
			</tree>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_document_form">
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">dm.offer.document</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_offer_step_document_tree"/>
	</record>
	<menuitem name="Direct Marketing/Configuration/Offer Steps/Documents/All Documents" id="menu_action_document_form" action="action_document_form" sequence="1"/>

