<?xml version="1.0"?>
<terp>
	<data>

		<record model="ir.ui.view" id="view_transfer_line_tree">
			<field name="name">base.synchro.obj.line.tree</field>
			<field name="model">base.synchro.obj.line</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Transfered Ids Details">
					<field name="name" select="1" />
					<field name="obj_id" select="1" />
					<field name="local_id" select="2" />
					<field name="remote_id" select="2" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_transfer_line_form">
			<field name="name">base.synchro.obj.line.form</field>
			<field name="model">base.synchro.obj.line</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Transfered Ids Details">
					<field name="name" select="1" />
					<field name="obj_id" select="1" />
					<field name="local_id" select="2" readonly="1"/>
					<field name="remote_id" select="2" readonly="1" />
				</form>
			</field>
		</record>


		<record model="ir.actions.act_window" id="action_base_synchro_obj_line_tree">
			<field name="name">Synchronized instances</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">base.synchro.obj.line</field>
			<field name="view_type">form</field>
		</record>
		<menuitem 
			name="Administration/Synchronization/History/Synchronized instances"
			action="action_base_synchro_obj_line_tree"
			id="menu_action_base_synchro_obj_line_tree" />

<!--view_base_synchro_obj starts-->

		<record model="ir.ui.view" id="view_transfer_form">
			<field name="name">base.synchro.obj.form</field>
			<field name="model">base.synchro.obj</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Transfer Details">
					<field name="name" select="1"/>
					<field name="active" select="2"/>
					<field name="server_id" select="2"/>
					<field name="model_id" select="1"/>
					<field name="action" />
					<field name="sequence"/>
					<field name="domain" colspan="4"/>
					<field name="synchronize_date"/>
				</form>
			</field>
		</record>

		<record model="ir.ui.view" id="view_regclass_tree">
			<field name="name">base.synchro.obj.tree</field>
			<field name="model">base.synchro.obj</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Synchronized objects">
					<field name="sequence"/>
					<field name="name"/>
					<field name="model_id"/>
					<field name="server_id"/>
					<field name="action"/>
					<field name="synchronize_date"/>
				</tree>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_transfer_tree">
			<field name="name">Synchronized objects</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">base.synchro.obj</field>
			<field name="view_type">form</field>
		</record>

		<menuitem name="Administration/Synchronization/Synchronized objects"
			action="action_transfer_tree" 
			id="transfer_menu_id" />


<!--view_base_synchro_obj starts-->

<!--view_base_synchro_server starts -->

		<record model="ir.ui.view" id="view_base_synchro_server_tree">
			<field name="name">base.synchro.server.tree</field>
			<field name="model">base.synchro.server</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Synchronized server">
					<field name="name" />
					<field name="server_url" />
					<field name="server_port" />
					<field name="server_db" />
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="view_base_synchro_server_form">
			<field name="name">base.synchro.server.form</field>
			<field name="model">base.synchro.server</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Synchronized server">
					<field name="name" select="1"/>
					<newline/>
					<field name="server_url" select="2"/>
					<newline/>
					<field name="server_port"/>
					<field name="server_db"/>
					<newline/>
					<field name="login" select="1" />
					<field name="password" />
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_base_synchro_server_tree">
			<field name="name">Synchronized servers</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">base.synchro.server</field>
			<field name="view_type">form</field>
		</record>

		<menuitem name="Administration/Synchronization/"
			action="action_base_synchro_server_tree" 
			id="synchro_server_tree_menu_id" />



<!--view_base_synchro_server end -->


	</data>
</terp>
