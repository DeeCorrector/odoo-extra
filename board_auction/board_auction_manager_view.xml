<?xml version="1.0"?>
<terp>
	<data>
		<record model="board.note.type" id="note_auction_type1">
			<field name="name">Auction Manager</field>
		</record>

		<record model="ir.ui.view" id="board_auction_manager_form1">
			<field name="name">board.auction.manager.form</field>
			<field name="model">board.board</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Auction manager ">
					<hpaned position="100">
						<child1>
							<action
								string="My 10 Latest Objects"
								name="%(report_auction.action_report_latest_objects_tree)d"
								colspan="4"
								height="200"
								width="510"/>
							<action string="My 10 Latest Deposits"
								name="%(report_auction.action_report_latest_doposit_tree)d"
								colspan="4"/>
							<action
								string="Auction manager board"
								name="%(report_auction.action_per_seller_customer_tree)d"
								colspan="4"/>
						</child1>

						<child2>
							<button
								string="Menu"
								name="%(base.action_menu_admin)d"
								icon="gtk-ok"
								type="action"
								colspan="4"/>
							<button
								string="My tasks board"
								name="%(open_board_auction)d"
								icon="gtk-ok"
								type="action"
								colspan="4"/>

							<action
								string="Auction manager board"
								name="%(report_auction.action_report_auction_object_date_tree)d"
								view_mode="graph,tree" colspan="4"/>
							<action
								string="Objects By Day"
								name="%(report_auction.action_report_auction_object_date_tree)d"
								view_mode="graph,tree" colspan="4"/>
						</child2>
					</hpaned>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="open_board_auction_manager">
			<field name="name">Auction manager board</field>
			<field name="res_model">board.board</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="usage">menu</field>
			<field name="view_id" ref="board_auction_manager_form1"/>
		</record>

		<menuitem
			name="Dashboards/Auction/Auction Manager"
			action="open_board_auction_manager"
			sequence="1"
			id="menu_board_auction_manager"/>

	</data>
</terp>
