<?xml version="1.0"?>
<terp>
	<data>
		<record model="board.note.type" id="note_auction_type">
			<field name="name">Auction</field>
		</record>

		<record model="ir.ui.view" id="board_auction_manager_form">
			<field name="name">board.auction.manager.form</field>
			<field name="model">board.board</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Auction manager ">
					<hpaned position="100">
						<child1>
							<action
								string="Auction manager board"
								name="%(sale.action_order_tree10)d"
								colspan="4"
								height="200"
								width="510"/>
							<action string="Auction manager board"
								name="%(report_auction.action_per_seller_customer_tree)d"
								colspan="4"/>
							<action
								string="Auction manager board"
								name="%(report_auction.action_per_seller_customer_tree)d"
								colspan="4"/>
						</child1>

						<child2>
							<button
								string="Menu"
								name="%(base.action_menu_admin)d"
								icon="gtk-ok"
								type="action"
								colspan="4"/>

							<action
								string="Auction manager board"
								name="%(report_auction.action_per_seller_customer_tree)d"
								view_mode="graph,tree" colspan="4"/>
							<action
								string="Auction manager board"
								name="%(report_auction.action_per_seller_customer_tree)d"
								view_mode="tree"
								colspan="4"/>
						</child2>
					</hpaned>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="open_board_auction">
			<field name="res_model">board.board</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="board_auction_manager_form"/>
		</record>

		<menuitem
			name="Dashboards/Auction Manager"
			action="open_board_auction"
			sequence="1"
			id="menu_board_auction"/>

	</data>
</terp>
