	<record model="ir.ui.view" id="view_partner_address_tree">
		<field name="name">Partner address tree inherited</field>
		<field name="model">res.partner.address</field>
		<field name="inherit_id" ref="base.view_partner_address_tree"/>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<field name="partner_id" position="after">
				<field name="contact_id" select="1"/>
			</field>
		</field>
	</record>

<!-- contact.title object view -->
		<record model="ir.ui.view" id="view_contact_title_form">
			<field name="name">contact.title.form</field>
			<field name="type">form</field>
			<field name="model">contact.title</field>
			<field name="arch" type="xml">
				<form string=" Contact Courtesy">
					<field name="name" select="1"/>
					<field name="code" select="1"/>
				</form>
			</field>
		</record>
		<record model="ir.ui.view" id="view_contact_title_tree">
			<field name="name">contact.title.tree</field>
			<field name="type">tree</field>
			<field name="model">contact.title</field>
			<field name="arch" type="xml">
				<tree string=" Contact Courtesy">
					<field name="name"/>
					<field name="code"/>
				</tree>
			</field>
		</record>
		<record model="ir.actions.act_window" id="action_contact_title">
			<field name="name">Contact Courtesy</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">contact.title</field>
			<field name="view_type">form</field>
			<field name="view_id" ref="view_contact_title_tree"/>
		</record>
		<menuitem name="Partners/Configuration/Contact Courtesy" action="action_contact_title" id="menu_contact_title"/>

