		<field name="name">report_invoice_salesman.forecast.stat.margin.graph</field>
		<field name="model">report_invoice_salesman.forecast.stat</field>
		<field name="type">graph</field>
		<field name="arch" type="xml">
			<graph string="Sales Forecasts" color="user_id" type="bar">
				<field name="category_id"/>
				<field name="margin"/>
				<field name="sum_margin"/>
