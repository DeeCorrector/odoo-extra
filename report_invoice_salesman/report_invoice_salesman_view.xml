<?xml version="1.0"?>
<terp>
	<data>
		<record model="ir.ui.view" id="report_invoice_salesman_forecast_view_tree">
			<field name="name">report_invoice_salesman_forecast.tree</field>
			<field name="model">report_invoice_salesman.forecast</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Sales Forecast">
					<field name="name"/>
					<field name="user_id"/>
					<field name="date_from"/>
					<field name="date_to"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="report_invoice_salesman_forecast_view_form">
			<field name="name">report_invoice_salesman_forecast.form</field>
			<field name="model">report_invoice_salesman.forecast</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Sales Forecast">
					<notebook>
					<page string="Sales Forecast">
						<field name="name" select="1"/>
						<field name="user_id" select="1"/>
						<field name="date_from" select="2"/>
						<field name="date_to"/>
						<field name="line_ids" colspan="4" nolabel="1">
							<tree string="Forecast Lines" editable="bottom">
								<field name="user_id"/>
								<field name="category_id"/>
								<field name="amount"/>
								<field name="margin"/>
								<field name="note"/>
							</tree>
						</field>
					</page>
					</notebook>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="action_report_invoice_salesman_forecast_view_form">
			<field name="name">Sales Forecast</field>
			<field name="res_model">report_invoice_salesman.forecast</field>
			<field name="view_type">form</field>
			<field name="view_mode">form,tree</field>
		</record>
		<menuitem
			name="Sales Management/Sales Forecast"
			id="menu_report_invoice_salesman_forecast_view_form"
			action="action_report_invoice_salesman_forecast_view_form" />

		<record model="ir.actions.act_window" id="action_invoice_salesman_forecast_view_form_my">
			<field name="res_model">report_invoice_salesman.forecast</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('user_id','=',uid)]</field>
		</record>
		<menuitem
			name="Sales Management/Sales Forecast/My Managing Sales Forecast"
			id="menu_invoice_salesman_forecast_view_form_my"
			action="action_invoice_salesman_forecast_view_form_my" />

		<record model="ir.actions.act_window" id="report_invoice_salesman_forecast_view_form_current">
			<field name="name">Current Sales Forecast</field>
			<field name="res_model">report_invoice_salesman.forecast</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[('date_from','&lt;=',time.strftime('%Y-%m-%d')), ('date_to','&gt;=',time.strftime('%Y-%m-%d'))]</field>
		</record>
		<menuitem
			name="Sales Management/Sales Forecast/Current Sales Forecast"
			id="menu_report_invoice_salesman_forecast_view_form_current"
			action="report_invoice_salesman_forecast_view_form_current" />

