<?xml version="1.0"?>
<terp>
<data>
	<menuitem name="Auction Management" id="menu_root" icon="terp-auction"/>
	<menuitem name="Auction Management/Configuration" groups="admin"/>

	=======================================================
	Auction Management/Configuration/artist
	=======================================================
	<record model="ir.ui.view" id="view_auction_artist_tree">
		<field name="name">auction.artists.tree</field>
		<field name="model">auction.artists</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Artists">
			<field name="name"/>
				<field name="birth_death_dates"/>
				<field name="biography"/>
			</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="view_auction_artist_form">
		<field name="name">auction.artists.form</field>
		<field name="model">auction.artists</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Artists">
				<field colspan="4" name="name" select="1"/>
				<field colspan="4" name="pseudo" select="1"/>
					<newline/>
				<field colspan="4" name="birth_death_dates"/>
					<newline/>
				<field colspan="4" name="biography"/>
			</form>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_auction_artist">
		<field name="res_model">auction.artists</field>
		<field name="view_type">tree</field>
		<field name="view_id" ref="view_auction_artist_tree"/>
	</record>
	<menuitem name="Auction Management/Configuration/Define Artists" action="action_auction_artist" id="menu_auction_artist"/>
	=======================================================
	Auction Management/Configuration/objectcategories
	=======================================================
	<record model="ir.ui.view" id="view_auction_object_categories_tree">
		<field name="name">auction.lot.category.tree</field>
		<field name="model">auction.lot.category</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
				<tree string="Lot Category">
					<field name="name"/>
				</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="view_auction_object_categories_form">
		<field name="name">auction.lot.category.form</field>
		<field name="model">auction.lot.category</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
				<form string="Lot Category">
					<field name="name" colspan="3" select="1"/>
					<newline/>
					<field name="priority"/>
					<field name="active" select="1"/>
					<field name="aie_categ" colspan="3"/>
				</form>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_auction_object_categories">
		<field name="res_model">auction.lot.category</field>
		<field name="view_type">tree</field>
		<field name="view_id" ref="view_auction_object_categories_tree"/>
	</record>
	<menuitem name="Auction Management/Configuration/Object Categories" action="action_auction_object_categories" id="menu_auction_object"/>
	=======================================================
Auction Management/Auction Dates/New Auction Dates
	=======================================================
	<record model="ir.ui.view" id="view_auction_dates_tree">
		<field name="name">auction.dates.tree</field>
		<field name="model">auction.dates</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Auction Dates">
				<field name="auction1" string="Auction 1"/>
				<field name="auction2" string="Auction 2"/>
				<field name="name" string="Names"/>
			</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="view_auction_dates_form">
		<field name="name">auction.dates.form</field>
		<field name="model">auction.dates</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Auctions">
				<field name="name" colspan="3" select="1"/>
				<separator string="Dates" colspan="3"/>
				<field name="expo1"/>
				<field name="expo2"/>
				<field name="auction1" select="1"/>
				<field name="auction2" select="1"/>
				<separator string="Commissions" colspan="3"/>
				<field name="buyer_costs" domain="[('domain','=','auction')]"/>
				<field name="seller_costs" domain="[('domain','=','auction')]"/>
				<separator string="Accounting" colspan="3"/>
				<field name="acc_income"/>
				<field name="acc_expense"/>
				<field name="acc_refund"/>
				<separator string="State" colspan="3"/>
				<field name="state"/>
				<button name="close" states="draft" string="Close + Create all invoices" type="object" colspan="2"/>
			</form>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_auction_dates_new">
		<field name="name">Draft Auctions</field>
		<field name="res_model">auction.dates</field>
		<field name="view_type">form</field>
		<field name="domain">[('state','=','draft')]</field>
		<field name="view_id" ref="view_auction_dates_form"/>
	</record>
	<menuitem name="Auction Management/Auction Dates" groups="admin" />
	<menuitem name="Auction Management/Auction Dates/New Auction Dates" action="action_auction_dates_new"/>
	=======================================================
Auction Management/Auction Dates/Old Auction Dates
	=======================================================
	<record model="ir.actions.act_window" id="action_auction_dates_old">
		<field name="name">Closed Auctions</field>
		<field name="res_model">auction.dates</field>
		<field name="view_type">tree</field>
		<field name="domain">[('state','=','close')]</field>
		<field name="view_id" ref="view_auction_dates_tree"/>
	</record>
	<menuitem name="Auction Management/Auction Dates/Old Auction Dates" action="action_auction_dates_old"/>

	<record model="ir.actions.act_window" id="action_auction_dates1">
		<field name="res_model">auction.dates</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_auction_dates_form"/>
	</record>

=======================================================
Auction Management/Auction Dates/Reporting
	=======================================================

	<menuitem name="Auction Management/Auction Dates/Reporting" action="action_auction_dates_old"/>

	=======================================================
	Auction Management/objects/All objects"
	=======================================================
	<record model="ir.ui.view" id="view_all_objects_form">
		<field name="name">auction.lots.form2</field>
		<field name="model">auction.lots</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Catalog">
				<notebook>
				<page string="General Informations">
					<separator string="Object" colspan="3"/>
						<field name="obj_num" select="1"/>
						<field name="lot_type" select="1"/>
						<field name="bord_vnd_id" select="1"/>
						<field name="lot_num"/>
						<field name="vnd_lim" select="1"/>
						<field name="vnd_lim_net"/>
						<field name="auction_id" colspan="3"/>
						<field name="name" select="1"/>
						<field name="name2" select="1"/>
						<field name="artist_id" select="1"/>
						<field name="artist2_id"/>
						<field name="lot_est1" select="1"/>
						<field name="lot_est2"/>
						<field name="author_right" domain="[('domain','=','sabam')]"/>
						<field name="tva"/>
						<field name="logo" widget="image"/>
						<field name="obj_desc" colspan="3"/>
					<separator string="Results" colspan="3"/>
						<field name="obj_price" select="1"/>
						<field name="obj_ret"/>
					<separator string="State" colspan="3"/>
						<field name="state" select="1"/>
						<field name="lot_local"/>
				</page>
				<page string="Partner Informations">
					<separator string="Buyer" colspan="3"/>
					<field name="ach_uid" colspan="3" select="1"/>
					<field name="ach_login" select="1" comparator="="/>
					<field name="obj_comm" select="1"/>
					<field name="ach_pay_id"/>
					<field name="ach_inv_id"/>
					<field name="ach_emp"/>
					<field name="bid_lines" widget="one2many_list" colspan="3" view_tree="auction.bid_line.tree2" view="auction.bid_line.form2"/>
				</page>
				</notebook>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_all_objects">
		<field name="res_model">auction.lots</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_all_objects_form"/>
	</record>
	<menuitem name="Auction Management/Objects" groups="admin"/>
	<menuitem name="Auction Management/Objects/All objects" action="action_all_objects"/>

	<!--<record model="ir.ui.view" id="v5">
		<field name="name">auction.lots.tree1</field>
		<field name="model">auction.lots</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
				<tree string="Auction Objects">
					<field name="lot_num"/>
					<field name="obj_num"/>
					<field name="name"/>
					<field name="auction_id"/>
					<field name="vnd_lim"/>
					<field name="lot_est1"/>
					<field name="lot_est2"/>
				</tree>
		</field>
	</record>-->

	=======================================================
	Auction Management/objects/All objects/Unclassified objects
	=======================================================
	<record model="ir.ui.view" id="view_unclassified_objects_form">
		<field name="name">auction.lots.form1</field>
		<field name="model">auction.lots</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Catalog">
				<field name="auction_id" colspan="3"/>
				<field name="lot_num"/>
				<field name="obj_num"/>
				<newline/>
				<field name="name"/>
				<field name="name2"/>
				<field name="lot_type" select="1"/>
				<newline/>
				<field name="artist_id"/>
				<field name="artist2_id"/>
				<field name="obj_desc" colspan="3"/>
				<field name="vnd_lim"/>
				<field name="vnd_lim_net"/>
				<field name="lot_est1"/>
				<field name="lot_est2"/>
				<field name="author_right" domain="[('domain','=','sabam')]"/>
				<field name="state" readonly="1"/>
				<field name="tva"/>
			</form>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_unclassified_objects">
		<field name="name">Unclassified objects</field>
		<field name="res_model">auction.lots</field>
		<field name="view_type">form</field>
		<field name="domain">[('auction_id','=',False)]</field>
		<field name="view_id" ref="view_unclassified_objects_form"/>
	</record>
	<menuitem name="Auction Management/Objects/All objects/Unclassified objects" action="action_unclassified_objects"/>
	=======================================================
	Auction Management/objects/All objects/Unsold objects
	=======================================================
	<menuitem name="Auction Management/Objects/All objects/Unsold objects" action="action_unclassified_objects"/>
	=======================================================
	Auction Management/objects/Objects by auction date
	=======================================================
	<menuitem name="Auction Management/Objects/Objects by auction date"  action="action_unclassified_objects"/>

	=======================================================
	Auction Management/seller/Deposit_border
	=======================================================
	<record model="ir.ui.view" id="view_deposit_border_form">
		<field name="name">auction.deposit.form</field>
		<field name="model">auction.deposit</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Deposit Border Form">
				<notebook>
					<page string="General Informations">
						<field name="name" select="1"/>
						<field name="date_dep" select="1"/>
						<field name="partner_id" colspan="3" select="1" on_change="partner_id_change(partner_id)"/>
						<field name="method"/>
						<field name="tax_id" domain="[('domain','=','auction')]"/>
						<field name="lot_id" widget="one2many_list" colspan="3" view_tree="auction.lots.tree1" view="auction.lots.form1"/>
					</page>
					<page string="Extra Costs">
						<field name="specific_cost_ids" widget="one2many_list" nolabel="1" colspan="3"/>
					</page>
				</notebook>
			</form>
		</field>
	</record>
	<record model="ir.actions.act_window" id="action_deposit_border">
		<field name="res_model">auction.deposit</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_deposit_border_form"/>
	</record>
	<menuitem name="Auction Management/Sellers" groups="admin" />
	<menuitem name="Auction Management/Sellers/Deposit border" action="action_deposit_border"/>
	=======================================================
	Auction Management/seller/Reporting
	=======================================================
	<menuitem name="Auction Management/Sellers/Reporting" action="action_deposit_border"/>
	=======================================================
		"Auction Management/Buyer/Bids
	=======================================================
	<record model="ir.ui.view" id="view_bids_tree">
		<field name="name">auction.bid_line.tree1</field>
		<field name="model">auction.bid_line</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="Bids">
				<field name="lot_id" string="ref"/>
				<field name="price"/>
				<field name="call"/>
			</tree>
		</field>
	</record>
	<record model="ir.ui.view" id="view_bids_form">
		<field name="name">auction.bid_line.form1</field>
		<field name="model">auction.bid_line</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="Bids">
				<field name="lot_id" domain="[('auction_id','=',parent['auction_id'])]" colspan="3"/>
				<field name="price"/>
				<field name="call" colspan="3"/>
			</form>
		</field>
	</record>


	<record model="ir.actions.act_window" id="action_bids_form">
		<field name="res_model">auction.bid</field>
		<field name="view_type">form</field>
		<field name="view_id" ref="view_bids_form"/>
	</record>
	<menuitem name="Auction Management/Buyers" groups="admin" />
	<menuitem name="Auction Management/Buyers/Bids"  action="action_bids_form"/>

	=======================================================
		"Auction Management/Buyer/Reporting
	=======================================================
	<menuitem name="Auction Management/Buyers/Reporting"  action="action_bids_form"/>
</data>
</terp>