<?xml version="1.0"?>

<terp>
	<data>
		<!--   View Account Detail View -->
		<record model="ir.ui.view" id="view_account_detail_tree">
			<field name="name">account.detail.tree</field>
			<field name="model">account.detail</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Accounts">
					<field name="name" select="1"/>
					<field name="type" select="1"/>
					<field name="level" select="1"/>
					<field name="debit" select="1"/>
					<field name="credit" select="1"/>
					<field name="balance" select="1"/>
					<field name="company_id"/>
				</tree>
			</field>
		</record>
				
		<record model="ir.actions.act_window" id="action_account_detail_list">
			<field name="name">Accounts</field>
			<field name="res_model">account.detail</field>
			<field name="view_type">tree</field>
			<field name="view_mode">tree</field>
			<field name="view_id" eval="view_account_detail_tree"/>
		</record>

		<!--   Account Report India Model View -->
		<record model="ir.ui.view" id="view_account_report_india_tree">
			<field name="name">account.report.india.tree</field>
			<field name="model">account.report.india</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="Accounts">
					<field name="group_type"/>
					<field name="gp_cal" select="1"/>
					<field name="np_cal" select="1"/>
				</tree>
			</field>
		</record>
		
		<record model="ir.ui.view" id="view_account_report_india_form">
			<field name="name">account.report.india.form</field>
			<field name="model">account.report.india</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Accounts">
					<field name="group_type"/>
					<field name="company_id"/>
					<newline/>
					<field name="fiscal_year" on_change="onchange_fiscal_year(fiscal_year)"/>
					<newline/>
					<field name="start_date"/>
					<field name="end_date"/>
					<newline/>
					<field name="acc_detail" colspan="4"  widget="many2many"/>
					<newline/>
					<field name="gp_cal" select="1"/>
					<field name="np_cal" select="1"/>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_account_report_india_list">
			<field name="name">Accounts</field>
			<field name="res_model">account.report.india</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" eval="view_account_report_india_tree"/>
		</record>
		
		<menuitem name="Financial Management/Reporting/" 
		id="menu_action_account_report_india_list" action="action_account_report_india_list"/>
			
			
			
			
	</data>
</terp>