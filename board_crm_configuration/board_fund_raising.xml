<?xml version="1.0"?>
<terp>
	<data>
		<!--
		 Board for Fund Raising
		 -->

		<record model="ir.ui.view" id="crm_case_graph_view_fund">
			<field name="name">CRM - Funds Graph</field>
			<field name="model">crm.case</field>
			<field name="type">graph</field>
			<field name="arch" type="xml">
				<graph string="Funds by Categories" type="pie" orientation="horizontal">
					<field name="categ_id"/>
					<field name="planned_cost" operator="+"/>
				</graph>
			</field>
		</record>	
		 
		<act_window name="Fund Raisings"
			domain="[('section_id', '=', 'Fund Raising')]"
			res_model="crm.case"
			view_type="form"
			view_mode="graph,tree,form"
			view_id="crm_case_graph_view_fund"
			id="act_fund_raising"/>
			
		<record model="ir.ui.view" id="board_crm_fund_form">
			<field name="name">CRM - Fund Raising Dashboard Form</field>
			<field name="model">board.board</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Fund Raising Dashboard">
					<hpaned>
						<child1>
							<action
								string="Fund Raising"
								name="%(act_fund_raising)d"
								colspan="4"/>
						</child1>
					</hpaned>
				</form>
			</field>
		</record>

		<record model="ir.actions.act_window" id="open_board_fund_dash">
			<field name="name">CRM - Fund Raising Dashboard</field>
			<field name="res_model">board.board</field>
			<field name="view_type">form</field>
			<field name="view_mode">form</field>
			<field name="usage">menu</field>
			<field name="view_id" ref="board_crm_fund_form"/>
		</record>

		<menuitem
			name="Dashboards/CRM Configuration/Fund Raising Dashboard"
			action="open_board_fund_dash"
			sequence="2"
			id="menu_board_fund_dash"
			icon="terp-graph"/>
	</data>
</terp>