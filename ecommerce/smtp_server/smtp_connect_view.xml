<?xml version="1.0"?>
<terp>
<data>
	
	<!-- start smtp-server configuration -->
	<!-- smtp-server list view -->
	<record model="ir.ui.view" id="view_smtp_connect_tree">
		<field name="name">smtp.connect.tree</field>
		<field name="model">smtp.mail.config</field>
		<field name="type">tree</field>
		<field name="arch" type="xml">
			<tree string="SMTP Server Configuration">
				<field name="name"/>
				<field name="server_name"/>
				<field name="port"/>
				<field name="from_add"/>
				<field name="user_name"/>
				<field name="password"/>
			</tree>
		</field>
	</record>

	<!-- smtp-server form view -->
	<record model="ir.ui.view" id="view_smtp_connect_form">
		<field name="name">smtp.connect.form</field>
		<field name="model">smtp.mail.config</field>
		<field name="type">form</field>
		<field name="arch" type="xml">
			<form string="SMTP Server Configuration">
				<separator string="SMTP Server Configuration" colspan="4"/>
				<newline/>
				<field name="name" select="1"/>
				<field name="server_name" select="1"/>
				<field name="port" select="1"/>
				<field name="from_add"/>
				<field name="user_name" select="1"/>
				<field name="password"/>
				<field name="ssl_name"/>
			</form>
		</field>
	</record>

	<!-- smtp-server windows action -->
	<record model="ir.actions.act_window" id="action_smtp_connect_form">
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">smtp.mail.config</field>
		<field name="view_type">form</field>
	</record>
	<menuitem name="Administration/Configuration/Base/SMTP Servers" action="action_smtp_connect_form" id="menu_smtp_connect_form"/>
	<menuitem name="ecommerce/Configuration/Tools/SMTP Servers" action="action_smtp_connect_form" id="menu_smtp_connect_form2"/>
	<!-- end smtp-server configuration -->
	
</data>
</terp>