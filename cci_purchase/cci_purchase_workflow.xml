<?xml version="1.0"?>
<terp>
	<data>

		<record model="res.roles" id="Purchase">
			<field name="name">Purchase - confirm</field>
		</record>

		<record model="res.roles" id="Purchase_bypass">
			<field name="name">Purchase By Pass Approve</field>
		</record>

		<record model="workflow.activity" id="act_temp">
			<field name="wkf_id" ref="purchase.purchase_order"/>
			<field name="name">temp</field>
			<field name="kind">function</field>
			<field name="action">wkf_temp_order()</field>
		</record>

		<record model="workflow.activity" id="act_pass">
			<field name="wkf_id" ref="purchase.purchase_order"/>
			<field name="name">pass</field>
			<field name="kind">function</field>
			<field name="action">wkf_approve_order()</field>
		</record>

		<record model="workflow.transition" id="trans_confirmed_temp">
			<field name="act_from" ref="purchase.act_confirmed"/>
			<field name="act_to" ref="act_temp"/>
			<field name="signal">purchase_temp</field>
			<field name="role_id" ref="Purchase"/>
		</record>

		<record model="workflow.transition" id="trans_confirmed_router22">
			<field name="act_from" ref="act_temp"/>
			<field name="act_to" ref="purchase.act_router"/>
			<field name="signal">purchase_approve</field>
		</record>

		<record model="workflow.transition" id="trans_confirmed_router221">
			<field name="act_from" ref="act_temp"/>
			<field name="act_to" ref="act_pass"/>
			<field name="signal">purchase_bypass</field>
			<field name="role_id" ref="Purchase_bypass"/>
		</record>

		<record model="workflow.transition" id="trans_confirmed_cancel2">
			<field name="act_from" ref="act_temp"/>
			<field name="act_to" ref="purchase.act_cancel"/>
			<field name="signal">purchase_cancel</field>
		</record>

		<record model="workflow.transition" id="trans_pass_approve">
			<field name="act_from" ref="act_pass"/>
			<field name="act_to" ref="purchase.act_router"/>
			<field name="signal">purchase_approve</field>
		</record>

		<record model="workflow.transition" id="trans_confirm_pass">
			<field name="act_from" ref="purchase.act_confirmed"/>
			<field name="act_to" ref="act_pass"/>
			<field name="signal">purchase_bypass</field>
			<field name="role_id" ref="Purchase_bypass"/>
		</record>

	</data>
</terp>
